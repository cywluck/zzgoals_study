/* pages/server/server.wxss */
@import "../page-template/compage.wxss";
.search-box{width:100%;height:87rpx;background-color: #f5f5f5;position: relative;overflow: hidden;z-index: 10;display: none;}
.search-box .input1{color:#b2b2b2;width:710rpx;height:55rpx;border:1px solid #f2f2f4;border-radius:16rpx;text-align: center;line-height: 55rpx;background-color: #fff;margin:15rpx auto;}
.search-box .icon-sousuo{color:#b2b2b2;position: absolute;left:40%;top:26rpx;z-index:1000;}
 
 .on{
    display:block!important;
}

.search-box1{width:710rpx;height:87rpx;background-color: #f5f5f5;position: relative;overflow: hidden;padding: 0 20rpx;z-index: 11;display: none;}
.search-box1 .input2{color:#b2b2b2;width:580rpx;height:55rpx;border:1px solid #f2f2f4;border-radius:16rpx;line-height: 55rpx;background-color: #fff;padding-left:50rpx;margin-top:15rpx;float:left; }
.search-box1 .icon-sousuo{color:#b2b2b2;position: absolute;left:37rpx;top:26rpx;z-index:1000;}
.search-box1 .cancle{float:right;line-height: 87rpx;font-size: 32rpx;color:#4a88ed;}
 
 .product-content{border-top:1px solid #d6d6db;background-color: #f5f5f5;}
 .product-content .left{float:left;width:174rpx;}
 .product-content .left .left-list{width:174rpx;height:100rpx;line-height: 100rpx;text-align: center;font-size: 34rpx;color:#353535;background-color: #f5f5f5;overflow: hidden;text-overflow: ellipsis;white-space: nowrap}
 .product-content .left .active{background-color: #fff;}

.product-content .right{float:left;width:537rpx;padding: 0 20rpx;background-color: #fff;border-bottom:1px solid #e5e5e5;}
.product-content .right .title{display: block;font-size: 34rpx;color:#353535;font-weight: bold;line-height: 100rpx;height: 100rpx;overflow: hidden}
.product-content .right .right-list{
  width:537rpx;
  height:136rpx;
  margin-bottom:60rpx;
}
.right-list .list-left{
  float:left;
  width:180rpx;
  margin-right:20rpx;
}
.right-list .list-left image{
  width:180rpx;
  height:136rpx;
}
.right-list .list-right{
  width:335rpx;
  float:left;
}
.right-list .list-right .text-top{
  font-size: 34rpx;
  font-weight: bold;
  color:#353535;
  line-height: 60rpx;
  display: block;
}
.right-list .list-right .text-foot{
  font-size: 26rpx;
  color:#888888;
  line-height: 36rpx;
  display: block;
  height:72rpx;
  overflow: hidden;
}
.container>image{width:750rpx;height:122rpx;display: block;}