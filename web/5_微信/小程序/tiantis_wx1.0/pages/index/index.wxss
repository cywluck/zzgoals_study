/**index.wxss**/
@import "../page-template/comcss.wxss";
.userinfo {
   display: flex;
  flex-direction: column;
  background:#fff;
  padding:32rpx;
  margin:0 30rpx;
  height:auto;
  border-radius:16rpx
}
.headMain{background:#0e4ca1;height:150rpx;z-index:-1;width:100%;margin-bottom:172rpx;padding-top:30rpx}
.header{height:auto;overflow:hidden}
.titleImg{width:130rpx;height:130rpx;overflow:hidden;float:left}
.headerImg{width:130rpx;height:130rpx;}
.textMain{margin:6rpx 0 0 20rpx;display:flex;flex-direction:column;float:left}
.headerTitle{font-size:34rpx;color:#333;line-height:48rpx;display:block;margin-top:20rpx}
.headerText{font-size:30rpx;color:#888;line-height:50rpx;}
.textInfor{font-size:14px;color:#333;line-height:44rpx;margin-top:10px}
/*--联系方式--*/
.listOne{background:#fff;padding:28rpx 0;border-radius:10rpx;width:690rpx;display:flex;align-items:center;height:32rpx;position:relative;margin:20rpx 30rpx 0}
.listOne:before{content:'';width:8rpx;height:32rpx;display:inline-block;background:#0e4ca1;position:absolute;left:0;top:28rpx}
.listIphone{font-size:34rpx;color:#333;margin-left:32rpx;font-weight:400}
.listServe{font-size:34rpx;color:#333;font-weight:400}
.serContact{background:#fff;border-radius:10rpx;border:none; text-align:left;margin:20rpx 30rpx 0;height:88rpx;line-height:88rpx;position:relative}
.serContact::after{width:0;height:0}
.tipIcon{font-size:30rpx;position:absolute;left:0;top:32rpx;color:#0e4ca1;line-height:32rpx;height:32rpx;display:block;width:8rpx}
.arrow{font-size:30rpx;position:absolute;top:0rpx;right:20rpx;color:#c7c7c7;height:88rpx;line-height:88rpx}
.arrowBtn{font-size:30rpx;position:absolute;top:4rpx;right:20rpx;color:#c7c7c7}
.listNumber{font-size:28rpx;color:#888;position:absolute;top:28rpx;right:50rpx}
/*--公司服务--*/
.scrollWrap{margin:0 30rpx;display:flex;flex-direction:column;background:#fff;border-radius:10rpx;width:690rpx;margin-top:20rpx;position:relative;padding:32rpx 0}
.scrollTitle{height:auto;position:relative}
.textTitle{font-size:34rpx;color:#333;margin-left:32rpx}
.textTitle:before{content:'';width:8rpx;height:32rpx;display:inline-block;background:#0e4ca1;position:absolute;left:0;top:6rpx}
.listMain{display:flex;flex-direction:column;margin-right:20rpx;width:298rpx;}
.listImage{width:298rpx;height:221rpx;}
.listImage image{width:375rpx;height:280rpx}
.scrollPic{margin-top:30rpx;padding:0 30rpx;height:auto;overflow:hidden}
.previewimg{width:298rpx;height:auto;margin-right:32rpx;float:left}  
.previewimg:nth-child(2n){margin-right:0}
.previewimg image{width:298rpx;height:221rpx;}
.listText{font-size:28rpx;text-align:center;line-height:70rpx;color:#333;display:block}
.scrollArrow{font-size:30rpx;position:absolute;top:0;right:20rpx;color:#c7c7c7;height:50rpx;line-height:50rpx}
/*--公司简介--*/
.cpyInfor{margin:0 30rpx;display:flex;flex-direction:column;background:#fff;padding:32rpx;width:626rpx;margin-top:20rpx;border-radius:10rpx;position:relative}
.cpyTitle{font-size:34rpx;color:#333;display:block;line-height:46rpx;position:relative}
.cpyTitle:before{content:'';width:8rpx;height:32rpx;display:block;background:#0e4ca1;position:absolute;left:-30rpx;top:8rpx}
.inforArrow{font-size:30rpx;position:absolute;top:32rpx;right:20rpx;color:#c7c7c7}
.cpyText{font-size:14px;color:#888;line-height:42rpx;margin-top:30rpx}
@keyframes fadeIn {
    0% { opacity: 0; }
    100% { opacity: 1; }
}
.fade_in {
    animation: fadeIn 1s both;
}